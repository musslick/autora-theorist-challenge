{
  "name": "Interactive Tutorial",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.8",
  "extensions": [
    "ms-python.python",
    "ms-vscode.remote-containers",
    "ms-vscode.codespaces"
  ],
  "postCreateCommand": "pip install cookiecutter",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "postStartCommand": "code tutorial/step1.md --reuse-window && code tutorial/step1.md --right"
}